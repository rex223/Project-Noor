# ============================================================================
# BONDHU AI BACKEND - REQUIRED ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
============================================================================
# 
# AI/LLM API KEYS (AT LEAST ONE REQUIRED)
# ============================================================================
# Google Gemini (Primary - REQUIRED)
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7

# OpenAI (Optional - Backup)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Claude (Optional - Backup)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# ============================================================================
# ENTERTAINMENT API KEYS (REQUIRED FOR FULL FUNCTIONALITY)
# ============================================================================
# Spotify API Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/auth/spotify/callback
SPOTIFY_SCOPE=user-read-recently-played user-library-read user-top-read user-read-playback-state

# YouTube Data API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_QUOTA_LIMIT=10000

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here

# Agent Configuration
AGENT_TIMEOUT=30
AGENT_MAX_RETRIES=3
CONCURRENT_AGENTS=3
AGENT_MEMORY_LIMIT=1000

# Rate Limiting (requests per minute)
SPOTIFY_RPM=100
YOUTUBE_RPM=100
STEAM_RPM=200
OPENAI_RPM=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/bondhu.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Personality Analysis Configuration
PERSONALITY_CONFIDENCE_THRESHOLD=0.6
PERSONALITY_UPDATE_FREQUENCY=7
CROSS_MODAL_WEIGHT=0.3

# API Server Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=false

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440